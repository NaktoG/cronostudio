# ===========================================
# CRONOSTUDIO - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to version control

# -------------------------------------------
# Database Configuration
# -------------------------------------------
POSTGRES_USER=crono
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=cronostudio
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://crono:your_secure_password_here@localhost:5432/cronostudio

# -------------------------------------------
# Supabase (if using Supabase instead of local PostgreSQL)
# -------------------------------------------
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# -------------------------------------------
# Authentication
# -------------------------------------------
# JWT Secret - Generate with: openssl rand -base64 32
JWT_SECRET=change_this_to_a_random_secret_in_production

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change_this_to_a_random_secret_in_production

# OAuth Providers (opcional)
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# -------------------------------------------
# API Configuration
# -------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# -------------------------------------------
# AI/LLM Integration (Agente 06)
# -------------------------------------------
# OpenAI
# OPENAI_API_KEY=sk-your_openai_api_key

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Google Gemini
# GOOGLE_AI_API_KEY=your_google_ai_api_key

# -------------------------------------------
# n8n Automation (Agente 13)
# -------------------------------------------
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/
# N8N_API_KEY=your_n8n_api_key

# -------------------------------------------
# YouTube API (Content Management)
# -------------------------------------------
# YOUTUBE_API_KEY=your_youtube_api_key
# YOUTUBE_CLIENT_ID=your_youtube_client_id
# YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
# YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# -------------------------------------------
# Storage (Images, Videos, Thumbnails)
# -------------------------------------------
# AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=cronostudio-assets

# Cloudinary (alternative)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# -------------------------------------------
# Email Service (Notifications)
# -------------------------------------------
# SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@cronostudio.com

# Resend (alternative)
# RESEND_API_KEY=your_resend_api_key

# -------------------------------------------
# Analytics & Monitoring
# -------------------------------------------
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
# NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# -------------------------------------------
# Development & Testing
# -------------------------------------------
NODE_ENV=development

# Enable debug logs
# DEBUG=true

# Test Database (for running tests)
# TEST_DATABASE_URL=postgresql://crono:crono@localhost:5432/cronostudio_test

# -------------------------------------------
# Security (Agente 14)
# -------------------------------------------
# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_COOKIE_NAME=cronostudio_session

# CSRF Protection
# CSRF_SECRET=your_csrf_secret

# -------------------------------------------
# CI/CD (Agente 03)
# -------------------------------------------
# Vercel (if deploying to Vercel)
# VERCEL_TOKEN=your_vercel_token

# Docker Registry
# DOCKER_REGISTRY=your_docker_registry
# DOCKER_USERNAME=your_docker_username
# DOCKER_PASSWORD=your_docker_password

# -------------------------------------------
# Feature Flags
# -------------------------------------------
# FEATURE_IDEAS_MODULE=true
# FEATURE_SCRIPTS_MODULE=true
# FEATURE_THUMBNAILS_MODULE=true
# FEATURE_SEO_MODULE=true
# FEATURE_ANALYTICS_MODULE=true
# FEATURE_AUTOMATIONS_MODULE=true

# Controla si se permiten registros p√∫blicos (true/false)
ALLOW_PUBLIC_SIGNUP=true
