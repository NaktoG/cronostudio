POSTGRES_DB=cronostudio
POSTGRES_USER=cronostudio
# Usa una contraseña fuerte distinta en cada despliegue
POSTGRES_PASSWORD=please_change_me_now
DATABASE_URL=postgresql://cronostudio:please_change_me_now@localhost:5432/cronostudio

# --- CronoStudio Auth ---
# Genera una cadena aleatoria (>=32 chars)
JWT_SECRET=PLEASE_CHANGE_THIS_SECRET_VALUE_NOW_1234
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
LOG_LEVEL=info
ALLOW_PUBLIC_SIGNUP=false

# --- App URL ---
APP_BASE_URL=http://localhost:3000

# --- SMTP (email) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@cronostudio.local

N8N_BASIC_AUTH_ACTIVE=true
# Genera usuario propio y una contraseña fuerte por despliegue
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=GENERAR_CONTRASENA_SEGURA

N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
# Genera con: openssl rand -hex 32
N8N_ENCRYPTION_KEY=REEMPLAZAR_CON_CLAVE_UNICA

# --- n8n -> Postgres ---
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=${POSTGRES_DB}
DB_POSTGRESDB_USER=${POSTGRES_USER}
DB_POSTGRESDB_PASSWORD=${POSTGRES_PASSWORD}

# URL pública/base (para webhooks; en local queda así)
WEBHOOK_URL=${N8N_PROTOCOL}://${N8N_HOST}:${N8N_PORT}/

# --- CronoStudio -> n8n ---
# Base URL de la API desde el contenedor n8n (Mac/Windows: host.docker.internal)
CRONOSTUDIO_API_BASE_URL=http://host.docker.internal:3000/api
CRONOSTUDIO_EMAIL=
CRONOSTUDIO_PASSWORD=

# Webhook shared secret (n8n -> CronoStudio)
# Enviar en el header: x-cronostudio-webhook-secret
CRONOSTUDIO_WEBHOOK_SECRET=

# Usuario de servicio para n8n (usar uno de los dos)
CRONOSTUDIO_SERVICE_USER_ID=
# CRONOSTUDIO_SERVICE_USER_EMAIL=

# --- Redis ---
# Ejemplo: rediss://default:supersecreto@redis.internal:6380/0
REDIS_URL=
# Solo para desarrollo local sin certificados válidos
REDIS_SKIP_TLS_VERIFY=false

# --- Observabilidad ---
OBS_ENABLED=false
OBS_ENDPOINT=

# --- YouTube Data API ---
# API Key para obtener canales/videos públicos
YOUTUBE_API_KEY=
# --- YouTube Analytics API ---
YOUTUBE_ANALYTICS_ACCESS_TOKEN=
# IDs de canales separados por coma (ej: UCxxxx,UCyyyy)
YOUTUBE_CHANNEL_IDS=

# Requiere email verificado para iniciar sesión (true/false)
REQUIRE_EMAIL_VERIFIED=true
